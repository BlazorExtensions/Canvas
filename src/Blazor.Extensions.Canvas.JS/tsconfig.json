{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2021",
    "module": "commonjs",
    "lib": [ "es2021", "dom" ],
    "strict": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "types": [ "node" ]
  },
  "exclude": [
    "node_modules"
  ]
}
